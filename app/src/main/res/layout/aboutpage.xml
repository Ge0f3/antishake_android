<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="match_parent"
android:layout_width="match_parent"
android:background="#FFFFFF"
>

<ImageView
    android:id="@+id/imageView"
    android:src="@mipmap/ic_launcher"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:scaleType="fitCenter"
    android:layout_marginStart="87dp"
    android:layout_alignParentTop="true"
     />
<!--TextView
    android:id="@+id/about"
    android:padding="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="About "
    android:textStyle="italic"
    android:textSize="28dp"
    android:textColor="#000000"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="182dp" /-->
<TextView
    android:id="@+id/about"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Antishake, a mobile application which is integrated with antishake library aims  to reduce the stress levels on the eyes of users when using mobile devices to read, and watch videos while in motion by stabilizing the screen according to the movement of the device."
    android:layout_marginTop="16dp"
    android:textSize="17dp"
    android:layout_marginLeft="18dp"
    android:textStyle="normal"
    android:fontFamily="sans-serif-condensed"
    android:layout_below="@+id/imageView"
    android:layout_centerHorizontal="true" />

<View
    android:id="@+id/blankline"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/about"
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="#E0E0E0" />
<TextView
    android:layout_marginTop="12dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/version"
    android:text="Version 1.0 "
    android:textSize="20dp"
    android:layout_width="wrap_content"
    android:layout_below="@+id/blankline"
    android:layout_height="wrap_content" />
<View
    android:id="@+id/blankline1"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/version"
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="#E0E0E0" />
<TextView
    android:layout_marginTop="12dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/connect"
    android:text="Conncet with us  "
    android:textSize="20dp"
    android:layout_width="wrap_content"
    android:layout_below="@+id/blankline1"
    android:layout_height="wrap_content" />
<LinearLayout
    android:layout_below="@+id/connect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <ImageView
        android:src="@mipmap/link"
        android:layout_width="50dp"
        android:layout_height="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/website"
        android:text="Visit our Website  "
        android:textSize="20dp"
        android:layout_below="@+id/blankline1"
        />
</LinearLayout>
</RelativeLayout>
